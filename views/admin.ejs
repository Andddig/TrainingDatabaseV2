<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - Training Database</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('./partials/header', { user }) %>
  
  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col">
        <h1>Admin Panel</h1>
        <p>Manage users and their access privileges.</p>
        <a href="/demo-portal" class="btn btn-info">
          <i class="fas fa-flask"></i> Demo Portal
        </a>
      </div>
    </div>
    
    <% if (locals.error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    
    <% if (locals.success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <div class="card mb-4">
      <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">Add Users</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h6>Manual Entry</h6>
            <form action="/admin/add-user" method="POST">
              <div class="form-group">
                <label for="add-email">Email</label>
                <input type="email" class="form-control" id="add-email" name="email" required>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="add-first-name">First Name</label>
                  <input type="text" class="form-control" id="add-first-name" name="firstName">
                </div>
                <div class="form-group col-md-6">
                  <label for="add-last-name">Last Name</label>
                  <input type="text" class="form-control" id="add-last-name" name="lastName">
                </div>
              </div>
              <div class="form-group">
                <label for="add-display-name">Display Name</label>
                <input type="text" class="form-control" id="add-display-name" name="displayName" placeholder="Optional">
              </div>
              <div class="form-group">
                <label>Roles</label>
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="add-role-student" name="roles" value="Student" checked>
                  <label class="custom-control-label" for="add-role-student">Student</label>
                </div>
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="add-role-approver" name="roles" value="Approver">
                  <label class="custom-control-label" for="add-role-approver">Approver</label>
                </div>
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="add-role-officer" name="roles" value="Training Officer">
                  <label class="custom-control-label" for="add-role-officer">Training Officer</label>
                </div>
              </div>
              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="add-is-admin" name="isAdmin">
                <label class="custom-control-label" for="add-is-admin">Admin</label>
              </div>
              <button type="submit" class="btn btn-primary">Add User</button>
            </form>
          </div>
          <div class="col-md-6">
            <h6>Import (CSV)</h6>
            <p class="text-muted mb-2">Headers: email, displayName, firstName, lastName, roles, isAdmin</p>
            <form action="/admin/import-users" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <input type="file" class="form-control-file" name="csvFile" accept=".csv" required>
              </div>
              <button type="submit" class="btn btn-outline-primary">Import CSV</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">User Management</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Joined</th>
                <th>Admin Status</th>
                <th>Roles</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(userItem) { %>
                <tr>
                  <td><%= userItem.displayName %></td>
                  <td><%= userItem.email %></td>
                  <td><%= new Date(userItem.createdAt).toLocaleDateString() %></td>
                  <td><span class="badge badge-<%= userItem.isAdmin ? 'success' : 'secondary' %>">
                    <%= userItem.isAdmin ? 'Admin' : 'User' %>
                  </span></td>
                  <td>
                    <form action="/admin/update-user/<%= userItem._id %>" method="POST">
                      <div class="form-group mb-0">
                        <div class="custom-control custom-checkbox">
                          <input type="checkbox" class="custom-control-input" id="role-student-<%= userItem._id %>" 
                            name="roles" value="Student" 
                            <%= userItem.roles && userItem.roles.includes('Student') ? 'checked' : '' %>>
                          <label class="custom-control-label" for="role-student-<%= userItem._id %>">Student</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                          <input type="checkbox" class="custom-control-input" id="role-approver-<%= userItem._id %>" 
                            name="roles" value="Approver" 
                            <%= userItem.roles && userItem.roles.includes('Approver') ? 'checked' : '' %>>
                          <label class="custom-control-label" for="role-approver-<%= userItem._id %>">Approver</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                          <input type="checkbox" class="custom-control-input" id="role-officer-<%= userItem._id %>" 
                            name="roles" value="Training Officer" 
                            <%= userItem.roles && userItem.roles.includes('Training Officer') ? 'checked' : '' %>>
                          <label class="custom-control-label" for="role-officer-<%= userItem._id %>">Training Officer</label>
                        </div>
                      </div>
                  </td>
                  <td>
                    <button type="submit" class="btn btn-sm btn-primary">
                      <i class="fas fa-save"></i> Save Roles
                    </button>
                    </form>
                    <% if (userItem.email !== 'adavis@bvar19.org' || !userItem.isAdmin) { %>
                      <form action="/admin/toggle-admin/<%= userItem._id %>" method="POST" class="mt-2">
                        <button type="submit" class="btn btn-sm btn-<%= userItem.isAdmin ? 'warning' : 'success' %>">
                          <i class="fas <%= userItem.isAdmin ? 'fa-user-minus' : 'fa-user-shield' %>"></i> 
                          <%= userItem.isAdmin ? 'Remove Admin' : 'Make Admin' %>
                        </button>
                      </form>
                    <% } %>
                    <% if (userItem.email !== 'adavis@bvar19.org') { %>
                      <form action="/admin/delete-user/<%= userItem._id %>" method="POST" class="mt-2" onsubmit="return confirm('Delete this user?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                          <i class="fas fa-trash"></i> Delete User
                        </button>
                      </form>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('./partials/footer') %>
  <%- include('./partials/scripts') %>
</body>
</html> 
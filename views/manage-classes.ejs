<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Training Classes - Training Database</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('./partials/header', { user }) %>
  
  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col">
        <h1><i class="fas fa-graduation-cap text-primary mr-2"></i>Manage Training Classes</h1>
        <p class="lead">Create and manage training classes for your organization.</p>
      </div>
      <div class="col-auto d-flex align-items-center">
        <button type="button" class="btn btn-primary" id="addClassBtn">
          <i class="fas fa-plus-circle mr-1"></i> Add Class
        </button>
      </div>
    </div>
    
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    
    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Training Classes</h5>
      </div>
      <div class="card-body">
        <!-- Add Class Form (Hidden initially) -->
        <div id="addClassForm" class="mb-4" style="display: none;">
          <div class="card">
            <div class="card-header bg-light">
              <h5 class="mb-0">Add New Training Class</h5>
            </div>
            <div class="card-body">
              <form action="/training/class/add" method="POST">
                <div class="form-group">
                  <label for="name">Class Name <span class="text-danger">*</span></label>
                  <input type="text" class="form-control" id="name" name="name" required>
                </div>
                
                <div class="form-group">
                  <label for="description">Description</label>
                  <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                </div>
                
                <div class="form-group">
                  <label for="hoursValue">Default Hours Value</label>
                  <input type="number" class="form-control" id="hoursValue" name="hoursValue" min="0" step="0.5" value="0">
                </div>
                
                <div class="form-group">
                  <label>Prerequisites (Classes that must be completed first)</label>
                  <div class="prerequisites-container">
                    <% if (trainingClasses && trainingClasses.length > 0) { %>
                      <div class="custom-prereq-dropdown">
                        <input type="text" class="form-control" id="prereqSearch" placeholder="Search and add prerequisites..." autocomplete="off">
                        <div class="dropdown-menu w-100" id="prereqDropdown" style="max-height:200px; overflow-y:auto;"></div>
                        <div id="prereqTags" class="mt-2"></div>
                        <input type="hidden" name="prerequisites" id="prerequisites">
                      </div>
                      <small class="form-text text-muted">Select all classes that must be completed directly before this one. Only list immediate prerequisites.</small>
                    <% } else { %>
                      <p class="text-muted">No other classes available to set as prerequisites.</p>
                    <% } %>
                  </div>
                </div>
                
                <div class="form-group text-right">
                  <button type="button" id="cancelAddBtn" class="btn btn-secondary mr-2">
                    <i class="fas fa-times mr-1"></i> Cancel
                  </button>
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save mr-1"></i> Save Class
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
        
        <!-- Class List -->
        <% if (trainingClasses.length === 0) { %>
          <div class="alert alert-info">
            <i class="fas fa-info-circle mr-2"></i> No training classes have been created yet. Click "Add Class" to create one.
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Class Name</th>
                  <th>Description</th>
                  <th>Hours Value</th>
                  <th>Prerequisites</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% trainingClasses.forEach(trainingClass => { %>
                  <tr>
                    <td><%= trainingClass.name %></td>
                    <td><%= trainingClass.description || 'No description' %></td>
                    <td><%= trainingClass.hoursValue %></td>
                    <td>
                      <% if (trainingClass.prerequisites && trainingClass.prerequisites.length > 0) { %>
                        <ul class="list-unstyled mb-0">
                          <% trainingClass.prerequisites.forEach(prereq => { %>
                            <li><%= prereq.name %></li>
                          <% }); %>
                        </ul>
                      <% } else { %>
                        <span class="text-muted">None</span>
                      <% } %>
                    </td>
                    <td>
                      <span class="badge badge-<%= trainingClass.isActive ? 'success' : 'danger' %>">
                        <%= trainingClass.isActive ? 'Active' : 'Inactive' %>
                      </span>
                    </td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <a href="/training/class/<%= trainingClass._id %>/edit" class="btn btn-primary">
                          <i class="fas fa-edit"></i>
                        </a>
                        <form action="/training/class/<%= trainingClass._id %>/toggle" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-<%= trainingClass.isActive ? 'warning' : 'success' %>">
                            <i class="fas fa-<%= trainingClass.isActive ? 'ban' : 'check' %>"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <%- include('./partials/footer') %>
  <%- include('./partials/scripts') %>
  <script>
    // Prerequisite tag-style dropdown logic
    const allPrereqOptions = [
      <% if (trainingClasses && trainingClasses.length > 0) { %>
        <% trainingClasses.forEach(classItem => { %>
          { id: '<%= classItem._id %>', name: '<%= classItem.name.replace(/'/g, "&#39;") %>' },
        <% }); %>
      <% } %>
    ];
    let selectedPrereqs = [];

    function renderPrereqTags() {
      const tagsDiv = document.getElementById('prereqTags');
      tagsDiv.innerHTML = '';
      selectedPrereqs.forEach(prereq => {
        const tag = document.createElement('span');
        tag.className = 'badge badge-primary mr-1 mb-1 prereq-tag';
        tag.textContent = prereq.name;
        tag.style.cursor = 'pointer';
        tag.title = 'Remove';
        tag.onclick = function() {
          selectedPrereqs = selectedPrereqs.filter(p => p.id !== prereq.id);
          renderPrereqTags();
          updatePrereqInput();
        };
        tagsDiv.appendChild(tag);
      });
      updatePrereqInput();
    }

    function updatePrereqInput() {
      document.getElementById('prerequisites').value = selectedPrereqs.map(p => p.id).join(',');
    }

    function filterDropdownOptions(query) {
      const lower = query.toLowerCase();
      return allPrereqOptions.filter(opt =>
        opt.name.toLowerCase().includes(lower) && !selectedPrereqs.some(p => p.id === opt.id)
      );
    }

    function showDropdown(options) {
      const dropdown = document.getElementById('prereqDropdown');
      dropdown.innerHTML = '';
      if (options.length === 0) {
        dropdown.style.display = 'none';
        return;
      }
      options.forEach(opt => {
        const item = document.createElement('a');
        item.className = 'dropdown-item';
        item.textContent = opt.name;
        item.style.cursor = 'pointer';
        item.onclick = function() {
          selectedPrereqs.push(opt);
          renderPrereqTags();
          document.getElementById('prereqSearch').value = '';
          dropdown.style.display = 'none';
        };
        dropdown.appendChild(item);
      });
      dropdown.style.display = 'block';
    }

    document.addEventListener('DOMContentLoaded', function() {
      // Toggle Add Class form
      $('#addClassBtn').click(function() {
        $('#addClassForm').slideDown();
      });

      // Cancel button
      $('#cancelAddBtn').click(function() {
        $('#addClassForm').slideUp();
      });

      // Prereq search logic
      const searchInput = document.getElementById('prereqSearch');
      const dropdown = document.getElementById('prereqDropdown');
      searchInput.addEventListener('input', function() {
        const val = searchInput.value.trim();
        if (val.length === 0) {
          dropdown.style.display = 'none';
          return;
        }
        const filtered = filterDropdownOptions(val);
        showDropdown(filtered);
      });
      searchInput.addEventListener('focus', function() {
        if (searchInput.value.trim().length > 0) {
          showDropdown(filterDropdownOptions(searchInput.value.trim()));
        }
      });
      document.addEventListener('click', function(e) {
        if (!searchInput.contains(e.target) && !dropdown.contains(e.target)) {
          dropdown.style.display = 'none';
        }
      });
      renderPrereqTags();
    });
  </script>
</body>
</html> 
<!-- Modern dependencies CSS -->
<link rel="stylesheet" href="/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/styles.css">

<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="/"><i class="fas fa-graduation-cap mr-2"></i>Training Database</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <% if (locals.user) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dashboardDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-home mr-1"></i> Dashboard
            </a>
            <div class="dropdown-menu" aria-labelledby="dashboardDropdown">
              <a class="dropdown-item" href="/dashboard"><i class="fas fa-tachometer-alt mr-2"></i> Main Dashboard</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="trainingDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-clipboard-list mr-1"></i> Training
            </a>
            <div class="dropdown-menu" aria-labelledby="trainingDropdown">
              <a class="dropdown-item" href="/training/submit"><i class="fas fa-upload mr-2"></i> Submit Training</a>
              <a class="dropdown-item" href="/training/my-submissions"><i class="fas fa-list-alt mr-2"></i> My Submissions</a>
              <% if (user.roles.includes('Approver') || user.roles.includes('Training Officer') || user.isAdmin) { %>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/training/approver/dashboard"><i class="fas fa-check mr-2"></i> Approve Submissions</a>
              <% } %>
              <% if (user.roles.includes('Training Officer') || user.isAdmin) { %>
                <a class="dropdown-item" href="/training/manage-classes"><i class="fas fa-chalkboard-teacher mr-2"></i> Manage Classes</a>
              <% } %>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="qualificationsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-certificate mr-1"></i> Qualifications
            </a>
            <div class="dropdown-menu" aria-labelledby="qualificationsDropdown">
              <a class="dropdown-item" href="/qualifications/my"><i class="fas fa-user-graduate mr-2"></i> My Qualifications</a>
              <% if (user.roles.includes('Training Officer') || user.isAdmin) { %>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/qualifications/dashboard"><i class="fas fa-tachometer-alt mr-2"></i> Qualification Dashboard</a>
                <a class="dropdown-item" href="/qualifications/manage"><i class="fas fa-cogs mr-2"></i> Manage Qualifications</a>
              <% } %>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-user mr-1"></i> <%= user.displayName %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
              <% if (user.isAdmin) { %>
                <a class="dropdown-item" href="/admin"><i class="fas fa-user-shield mr-2"></i> Admin Panel</a>
                <div class="dropdown-divider"></div>
              <% } %>
              <a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt mr-2"></i> Logout</a>
            </div>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/login"><i class="fas fa-sign-in-alt mr-1"></i> Login</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav> 
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - Training Database</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('./partials/header', { user }) %>
  
  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col">
        <h1>Admin Panel</h1>
        <p>Manage users and their access privileges. Need to add a better admin panel</p>
        <a href="/demo-portal" class="btn btn-info">
          <i class="fas fa-flask"></i> Demo Portal
        </a>
      </div>
    </div>
    
    <% if (locals.error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    
    <% if (locals.success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">User Management</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Joined</th>
                <th>Admin Status</th>
                <th>Roles</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(userItem) { %>
                <tr>
                  <td><%= userItem.displayName %></td>
                  <td><%= userItem.email %></td>
                  <td><%= new Date(userItem.createdAt).toLocaleDateString() %></td>
                  <td><span class="badge badge-<%= userItem.isAdmin ? 'success' : 'secondary' %>">
                    <%= userItem.isAdmin ? 'Admin' : 'User' %>
                  </span></td>
                  <td>
                    <form action="/admin/update-user/<%= userItem._id %>" method="POST">
                      <div class="form-group mb-0">
                        <div class="custom-control custom-checkbox">
                          <input type="checkbox" class="custom-control-input" id="role-student-<%= userItem._id %>" 
                            name="roles" value="Student" 
                            <%= userItem.roles && userItem.roles.includes('Student') ? 'checked' : '' %>>
                          <label class="custom-control-label" for="role-student-<%= userItem._id %>">Student</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                          <input type="checkbox" class="custom-control-input" id="role-approver-<%= userItem._id %>" 
                            name="roles" value="Approver" 
                            <%= userItem.roles && userItem.roles.includes('Approver') ? 'checked' : '' %>>
                          <label class="custom-control-label" for="role-approver-<%= userItem._id %>">Approver</label>
                        </div>
                        <div class="custom-control custom-checkbox">
                          <input type="checkbox" class="custom-control-input" id="role-officer-<%= userItem._id %>" 
                            name="roles" value="Training Officer" 
                            <%= userItem.roles && userItem.roles.includes('Training Officer') ? 'checked' : '' %>>
                          <label class="custom-control-label" for="role-officer-<%= userItem._id %>">Training Officer</label>
                        </div>
                      </div>
                  </td>
                  <td>
                    <button type="submit" class="btn btn-sm btn-primary">
                      <i class="fas fa-save"></i> Save Roles
                    </button>
                    </form>
                    <button type="button" 
                            class="btn btn-sm btn-outline-secondary mt-2 edit-user-btn"
                            data-toggle="modal"
                            data-target="#editUserModal"
                            data-user='<%- JSON.stringify({
                              id: userItem._id,
                              firstName: userItem.firstName || '',
                              middleName: userItem.middleName || '',
                              lastName: userItem.lastName || '',
                              displayName: userItem.displayName || '',
                              email: userItem.email || ''
                            }) %>'>
                      <i class="fas fa-user-edit"></i> Edit Details
                    </button>
                    <% if (userItem.email !== 'adavis@bvar19.org' || !userItem.isAdmin) { %>
                      <form action="/admin/toggle-admin/<%= userItem._id %>" method="POST" class="mt-2">
                        <button type="submit" class="btn btn-sm btn-<%= userItem.isAdmin ? 'warning' : 'success' %>">
                          <i class="fas <%= userItem.isAdmin ? 'fa-user-minus' : 'fa-user-shield' %>"></i> 
                          <%= userItem.isAdmin ? 'Remove Admin' : 'Make Admin' %>
                        </button>
                      </form>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editUserModalLabel">Edit User Details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="editUserForm" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="editUserFirstName">First Name</label>
              <input type="text" class="form-control" id="editUserFirstName" name="firstName" required>
            </div>
            <div class="form-group">
              <label for="editUserMiddleName">Middle Name</label>
              <input type="text" class="form-control" id="editUserMiddleName" name="middleName">
            </div>
            <div class="form-group">
              <label for="editUserLastName">Last Name</label>
              <input type="text" class="form-control" id="editUserLastName" name="lastName" required>
            </div>
            <div class="form-group">
              <label for="editUserDisplayName">Display Name</label>
              <input type="text" class="form-control" id="editUserDisplayName" name="displayName">
              <small class="form-text text-muted">Leave blank to use "First [Middle] Last".</small>
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" id="editUserEmail" readonly>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <%- include('./partials/footer') %>
  <%- include('./partials/scripts') %>
  <script>
    $(function() {
      $('#editUserModal').on('show.bs.modal', function(event) {
        const button = $(event.relatedTarget);
        let userData = button.attr('data-user');
        try {
          userData = userData ? JSON.parse(userData) : null;
        } catch (err) {
          userData = null;
        }

        if (!userData) {
          return;
        }

        const form = $('#editUserForm');
        form.attr('action', `/admin/update-user-details/${userData.id}`);
        $('#editUserFirstName').val(userData.firstName || '');
        $('#editUserMiddleName').val(userData.middleName || '');
        $('#editUserLastName').val(userData.lastName || '');
        $('#editUserDisplayName').val(userData.displayName || '');
        $('#editUserEmail').val(userData.email || '');
      });
    });
  </script>
</body>
</html> 
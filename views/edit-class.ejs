<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Training Class - Training Database</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sortable.min.js"></script>
</head>
<body>
  <%- include('./partials/header', { user }) %>
  
  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col">
        <h1><i class="fas fa-graduation-cap text-primary mr-2"></i>Edit Training Class</h1>
      </div>
      <div class="col-auto">
        <a href="/training/manage-classes" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Back to Classes
        </a>
      </div>
    </div>
    
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    
    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Class Details</h5>
      </div>
      <div class="card-body">
        <form action="/training/class/<%= trainingClass._id %>/update" method="POST">
          <div class="form-group">
            <label for="name">Class Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="name" name="name" value="<%= trainingClass.name %>" required>
          </div>
          
          <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"><%= trainingClass.description %></textarea>
          </div>
          
          <div class="form-group">
            <label for="hoursValue">Default Hours Value</label>
            <input type="number" class="form-control" id="hoursValue" name="hoursValue" min="0" step="0.5" value="<%= trainingClass.hoursValue %>">
          </div>
          
          <div class="form-group">
            <label>Prerequisites (Classes that must be completed first)</label>
            <div class="transfer-list">
              <div class="transfer-list-column">
                <div class="transfer-list-header">Available Classes</div>
                <div class="transfer-list-items" id="availablePrerequisites">
                  <% if (otherClasses && otherClasses.length > 0) { %>
                    <% otherClasses.forEach(classItem => { %>
                      <% if (!trainingClass.prerequisites || !trainingClass.prerequisites.some(p => p._id.toString() === classItem._id.toString())) { %>
                        <div class="transfer-list-item" data-id="<%= classItem._id %>">
                          <%= classItem.name %>
                        </div>
                      <% } %>
                    <% }); %>
                  <% } else { %>
                    <div class="alert alert-warning mb-0">
                      <i class="fas fa-exclamation-triangle mr-2"></i> No other classes available.
                    </div>
                  <% } %>
                </div>
              </div>
              <div class="transfer-list-controls">
                <button type="button" class="btn btn-outline-primary" id="addPrerequisite" title="Add selected prerequisites">
                  <i class="fas fa-arrow-right"></i>
                </button>
                <button type="button" class="btn btn-outline-primary" id="removePrerequisite" title="Remove selected prerequisites">
                  <i class="fas fa-arrow-left"></i>
                </button>
              </div>
              <div class="transfer-list-column">
                <div class="transfer-list-header">Selected Prerequisites</div>
                <div class="transfer-list-items" id="selectedPrerequisites">
                  <% if (trainingClass.prerequisites && trainingClass.prerequisites.length > 0) { %>
                    <% trainingClass.prerequisites.forEach(prerequisite => { %>
                      <div class="transfer-list-item" data-id="<%= prerequisite._id %>">
                        <%= prerequisite.name %>
                      </div>
                    <% }); %>
                  <% } %>
                </div>
              </div>
            </div>
            <input type="hidden" name="prerequisites" id="prerequisites">
            <small class="form-text text-muted">Order matters - list prerequisites in the order they should be completed.</small>
          </div>
          
          <div class="form-group text-right">
            <a href="/training/manage-classes" class="btn btn-secondary mr-2">
              <i class="fas fa-times mr-1"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save mr-1"></i> Update Class
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  <%- include('./partials/footer') %>
  <%- include('./partials/scripts') %>
  
  <script>
    $(document).ready(function() {
      // Initialize Sortable for both lists
      const availablePrerequisites = new Sortable(document.getElementById('availablePrerequisites'), {
        group: 'shared',
        animation: 150,
        ghostClass: 'sortable-ghost',
        dragClass: 'sortable-drag',
        onEnd: function() {
          updatePrerequisitesInput();
        }
      });

      const selectedPrerequisites = new Sortable(document.getElementById('selectedPrerequisites'), {
        group: 'shared',
        animation: 150,
        ghostClass: 'sortable-ghost',
        dragClass: 'sortable-drag',
        onEnd: function() {
          updatePrerequisitesInput();
        }
      });

      // Add prerequisite to selected
      $('#addPrerequisite').on('click', function() {
        const selectedItems = $('#availablePrerequisites .transfer-list-item.selected');
        if (selectedItems.length > 0) {
          selectedItems.appendTo('#selectedPrerequisites');
          updatePrerequisitesInput();
        }
      });

      // Remove prerequisite from selected
      $('#removePrerequisite').on('click', function() {
        const selectedItems = $('#selectedPrerequisites .transfer-list-item.selected');
        if (selectedItems.length > 0) {
          selectedItems.appendTo('#availablePrerequisites');
          updatePrerequisitesInput();
        }
      });

      // Toggle selection on click
      $(document).on('click', '.transfer-list-item', function(e) {
        if (!$(e.target).is('button, a, input')) {
          $(this).toggleClass('selected');
          updateButtonStates();
        }
      });

      // Update button states based on selection
      function updateButtonStates() {
        const hasSelectedAvailable = $('#availablePrerequisites .transfer-list-item.selected').length > 0;
        const hasSelectedSelected = $('#selectedPrerequisites .transfer-list-item.selected').length > 0;
        
        $('#addPrerequisite').prop('disabled', !hasSelectedAvailable);
        $('#removePrerequisite').prop('disabled', !hasSelectedSelected);
      }

      // Update the hidden input with selected prerequisite IDs
      function updatePrerequisitesInput() {
        const selectedIds = [];
        $('#selectedPrerequisites .transfer-list-item').each(function() {
          selectedIds.push($(this).data('id'));
        });
        $('#prerequisites').val(selectedIds.join(','));
        updateButtonStates();
      }

      // Initialize the form
      updateButtonStates();
      updatePrerequisitesInput();
    });
  </script>
</body>
</html> 
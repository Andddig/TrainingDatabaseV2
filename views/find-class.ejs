<%- include('partials/header') %>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>Find a Class</h1>
            <div class="btn-group">
                <a href="/mfri/find-class?region=North Central" class="btn btn-outline-primary <%= region === 'North Central' ? 'active' : '' %>">North Central</a>
                <!-- Add more regions as they become available -->
            </div>
        </div>
    </div>

    <div class="row">
        <% if (classes.length === 0) { %>
            <div class="col">
                <div class="alert alert-info">
                    No classes found for this region. Please check back later.
                </div>
            </div>
        <% } else { %>
            <% classes.forEach(course => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0"><%= course.title %></h5>
                            <small class="text-muted">Course ID: <%= course.courseId %></small>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Dates:</strong> <%= course.startDate.toLocaleDateString() %> - <%= course.endDate.toLocaleDateString() %><br>
                                <strong>Location:</strong> <%= course.location %><br>
                                <strong>Hours:</strong> <%= course.instructionalHours %><br>
                                <strong>Registration:</strong> <%= course.registrationOpen.toLocaleDateString() %> - <%= course.registrationClose.toLocaleDateString() %>
                            </p>
                            <h6>Class Times:</h6>
                            <ul class="list-unstyled">
                                <% course.classTimes.forEach(time => { %>
                                    <li><%= time.day %>: <%= time.startTime %> - <%= time.endTime %></li>
                                <% }); %>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <a href="<%= course.registrationUrl %>" class="btn btn-primary" target="_blank">Register Now</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %> 
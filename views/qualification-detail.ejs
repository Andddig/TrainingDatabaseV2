<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qualification Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('./partials/header', { user }) %>
    
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col">
                <h1>Qualification Details</h1>
            </div>
            <div class="col-auto">
                <a href="/qualifications/dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <% if (locals.error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        
        <% if (locals.success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Member Information</h5>
                    <span class="badge badge-<%= userQualification.isComplete ? 'success' : 'info' %>">
                        <%= userQualification.isComplete ? 'Completed' : 'In Progress' %>
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Member</h6>
                        <p>
                            <%= userQualification.user.displayName %><br>
                            <small class="text-muted"><%= userQualification.user.email %></small>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h6>Qualification</h6>
                        <p>
                            <%= userQualification.qualification.name %><br>
                            <small class="text-muted"><%= userQualification.qualification.description %></small>
                        </p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-4">
                        <h6>Status</h6>
                        <p>
                            <%= userQualification.isComplete ? 'Completed' : 'In Progress' %>
                            <% if (userQualification.isComplete && userQualification.earnedDate) { %>
                                <br><small class="text-muted">Earned: <%= new Date(userQualification.earnedDate).toLocaleDateString() %></small>
                            <% } %>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h6>Last Updated</h6>
                        <p><%= new Date(userQualification.lastUpdated).toLocaleDateString() %></p>
                    </div>
                    <div class="col-md-4">
                        <h6>Progress</h6>
                        <% 
                            const completedCount = userQualification.completedClasses.length;
                            const totalCount = completedCount + userQualification.missingClasses.length;
                            const percentage = totalCount > 0 ? Math.floor((completedCount / totalCount) * 100) : 0;
                        %>
                        <div class="progress">
                            <div class="progress-bar <%= userQualification.isComplete ? 'bg-success' : 'bg-info' %>" 
                                role="progressbar" 
                                <% const widthStyle = `width: ${percentage}%`; %>
                                style="<%= widthStyle %>"
                                aria-valuenow="<%= percentage %>" 
                                aria-valuemin="0" 
                                aria-valuemax="100">
                                <%= percentage %>%
                            </div>
                        </div>
                        <small class="text-muted">
                            <%= completedCount %> of <%= totalCount %> required classes completed
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-success text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Completed Classes</h5>
                            <% if (userQualification.completedClasses && userQualification.completedClasses.length > 0) { %>
                                <button type="button" class="btn btn-sm btn-light toggle-classes-btn">
                                    <i class="fas fa-plus"></i> Show Classes
                                </button>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (userQualification.completedClasses && userQualification.completedClasses.length > 0) { %>
                            <ul class="list-group class-list" style="display: none;">
                                <% userQualification.completedClasses.forEach(classItem => { %>
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1"><%= classItem.class.name %></h6>
                                                <small class="text-muted">Completed: <%= new Date(classItem.completedDate).toLocaleDateString() %></small>
                                            </div>
                                            <a href="/training/submission/<%= classItem.submission._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-file-alt"></i> View Certificate
                                            </a>
                                        </div>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-muted mb-0">No classes have been completed yet.</p>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-warning text-dark">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Missing Classes</h5>
                            <% if (userQualification.missingClasses && userQualification.missingClasses.length > 0) { %>
                                <button type="button" class="btn btn-sm btn-dark toggle-classes-btn">
                                    <i class="fas fa-plus"></i> Show Classes
                                </button>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (userQualification.missingClasses && userQualification.missingClasses.length > 0) { %>
                            <ul class="list-group class-list" style="display: none;">
                                <% userQualification.missingClasses.forEach(classItem => { %>
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1"><%= classItem.name %></h6>
                                                <% if (classItem.description) { %>
                                                    <small class="text-muted"><%= classItem.description %></small>
                                                <% } %>
                                            </div>
                                            <div>
                                                <span class="badge badge-warning">Pending</span>
                                            </div>
                                        </div>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-success mb-0">All required classes have been completed!</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <% if (!userQualification.isComplete && userQualification.missingClasses.length === 0) { %>
            <div class="alert alert-warning">
                <h5>Ready to Complete</h5>
                <p>This qualification has all required classes completed but hasn't been marked as complete. This could be due to a system processing delay or manual intervention required.</p>
                <form action="/qualifications/mark-complete/<%= userQualification._id %>" method="POST" class="mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle"></i> Mark as Complete
                    </button>
                </form>
            </div>
        <% } %>

        <% if (locals.user && locals.user.isTrainingOfficer && !userQualification.isComplete) { %>
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Training Officer Actions</h5>
                </div>
                <div class="card-body">
                    <p>As a Training Officer, you can manually override the completion status of this qualification.</p>
                    <form action="/qualifications/mark-complete/<%= userQualification._id %>" method="POST">
                        <div class="form-group">
                            <label for="overrideReason">Override Reason (Optional)</label>
                            <textarea class="form-control" id="overrideReason" name="overrideReason" rows="2" placeholder="Enter reason for manual override"></textarea>
                        </div>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-exclamation-triangle"></i> Manual Override - Mark as Complete
                        </button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('./partials/footer') %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script>
        $(document).ready(function() {
            $('.toggle-classes-btn').on('click', function() {
                const listElement = $(this).closest('.card').find('.class-list');
                if (listElement.is(':visible')) {
                    listElement.slideUp();
                    $(this).html('<i class="fas fa-plus"></i> Show Classes');
                } else {
                    listElement.slideDown();
                    $(this).html('<i class="fas fa-minus"></i> Hide Classes');
                }
            });
        });
    </script>
</body>
</html> 
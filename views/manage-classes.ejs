<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Training Classes - BVAR19 Portal</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>BVAR19 Portal</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/dashboard">Dashboard</a>
        <% if (user.isAdmin) { %>
          <a href="/admin">Admin Panel</a>
        <% } %>
        <a href="/logout">Logout</a>
      </nav>
    </header>
    
    <main>
      <div class="manage-classes">
        <div class="classes-header">
          <h2>Manage Training Classes</h2>
          <button id="addClassBtn" class="btn-add">Add New Class</button>
        </div>
        
        <% if (error) { %>
          <div class="error-message">
            <p><%= error %></p>
          </div>
        <% } %>
        
        <% if (success) { %>
          <div class="success-message">
            <p><%= success %></p>
          </div>
        <% } %>
        
        <!-- Add Class Form (Hidden initially) -->
        <div id="addClassForm" class="class-form" style="display: none;">
          <h3>Add New Training Class</h3>
          <form action="/training/class/add" method="POST">
            <div class="form-group">
              <label for="name">Class Name:</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
              <label for="description">Description:</label>
              <textarea id="description" name="description" rows="3"></textarea>
            </div>
            
            <div class="form-group">
              <label for="hoursValue">Default Hours Value:</label>
              <input type="number" id="hoursValue" name="hoursValue" min="0" step="0.5" value="0">
            </div>
            
            <div class="form-actions">
              <button type="submit" class="btn-save">Save Class</button>
              <button type="button" id="cancelAddBtn" class="btn-cancel">Cancel</button>
            </div>
          </form>
        </div>
        
        <!-- Class List -->
        <div class="classes-list">
          <h3>Available Training Classes</h3>
          
          <% if (trainingClasses.length === 0) { %>
            <div class="no-classes">
              <p>No training classes have been created yet.</p>
            </div>
          <% } else { %>
            <div class="classes-table">
              <table>
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Default Hours</th>
                    <th>Status</th>
                    <th>Created By</th>
                    <th>Created</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% trainingClasses.forEach(trainingClass => { %>
                    <tr class="class-row <%= trainingClass.isActive ? 'active' : 'inactive' %>">
                      <td><%= trainingClass.name %></td>
                      <td><%= trainingClass.description || 'No description' %></td>
                      <td><%= trainingClass.hoursValue %></td>
                      <td><span class="status-badge <%= trainingClass.isActive ? 'active' : 'inactive' %>">
                        <%= trainingClass.isActive ? 'Active' : 'Inactive' %>
                      </span></td>
                      <td><%= trainingClass.createdBy ? trainingClass.createdBy.displayName : 'System' %></td>
                      <td><%= new Date(trainingClass.createdAt).toLocaleDateString() %></td>
                      <td>
                        <div class="action-buttons">
                          <a href="/training/class/<%= trainingClass._id %>/edit" class="btn-edit">Edit</a>
                          <form action="/training/class/<%= trainingClass._id %>/toggle" method="POST" class="inline-form">
                            <button type="submit" class="btn-toggle">
                              <%= trainingClass.isActive ? 'Deactivate' : 'Activate' %>
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </main>
    
    <footer>
      <p>&copy; <%= new Date().getFullYear() %> BVAR19.org. All rights reserved.</p>
    </footer>
  </div>
  
  <script>
    // Toggle Add Class form
    const addClassBtn = document.getElementById('addClassBtn');
    const addClassForm = document.getElementById('addClassForm');
    const cancelAddBtn = document.getElementById('cancelAddBtn');
    
    addClassBtn.addEventListener('click', function() {
      addClassForm.style.display = 'block';
    });
    
    cancelAddBtn.addEventListener('click', function() {
      addClassForm.style.display = 'none';
    });
  </script>
</body>
</html> 